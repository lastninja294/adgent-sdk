{
  "name": "adgent-sdk",
  "version": "0.1.9",
  "description": "Lightweight, framework-agnostic VAST Player SDK for Smart TV platforms",
  "type": "module",
  "main": "./dist/adgent-sdk.umd.js",
  "module": "./dist/adgent-sdk.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/adgent-sdk.es.js",
      "require": "./dist/adgent-sdk.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "vast",
    "video-ads",
    "smart-tv",
    "webos",
    "tizen",
    "vidaa",
    "sdk"
  ],
  "author": "Asadbek Omonboyev",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^5.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "happy-dom": "^13.3.1",
    "terser": "^5.46.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.1",
    "vitest": "^1.2.0"
  }
}
